<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%">
	<s:layout>
		<s:VerticalLayout horizontalAlign="center" paddingBottom="10" paddingLeft="10"
						  paddingRight="10" paddingTop="10"/>
	</s:layout>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import models.Wishlist;

			[Bindable]
			public var wishlist: Wishlist;
		]]>
	</fx:Script>
	<s:BorderContainer width="100%" cornerRadius="5" dropShadowVisible="true">
		<s:layout>
			<s:VerticalLayout paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10"/>
		</s:layout>
		<s:HGroup width="100%" verticalAlign="middle">
			<s:Label id="wishlistName" fontSize="20" text="{wishlist.name}"/>
			<s:Spacer width="100%"/>
			<s:Label id="wishlistBuyDate" fontSize="20" fontStyle="normal" text="{wishlist.buyDate}"/>
		</s:HGroup>
		<s:HGroup width="100%" verticalAlign="middle">
			<s:Label id="wishlistSaving" fontSize="20" text="{wishlist.saving}"/>
			<s:Spacer width="100%"/>
			<s:Label id="wishlistTotal" fontSize="20" text="{wishlist.total}"/>
		</s:HGroup>
	</s:BorderContainer>
</s:Group>
